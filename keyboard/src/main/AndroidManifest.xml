<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiang.keyboard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".constant.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_qkey_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_qkey_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.LoginActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".view.EditActivity" />

        <receiver
            android:name=".service.KeyboardReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="KeyboardReceiver" />

        <activity
            android:name=".view.KeyboardActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>