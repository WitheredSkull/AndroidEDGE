<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

    <com.shuanglu.edge.View.ToolBar.View.EdgeToolBarView
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:img_back="@drawable/ic_back"
            app:img_title="@drawable/ic_refresh"
            app:img_more="@drawable/ic_close"
            app:text_back="返回"
            app:text_title="标题"
            app:text_more="关闭"
            app:color_text="@color/colorEdgePrimaryDark"
            app:color_line="@color/colorEdgeAccent"
            app:height_line="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edgeToolBarView"
            ></com.shuanglu.edge.View.ToolBar.View.EdgeToolBarView>

    <LinearLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></LinearLayout>
    <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:onClick="click"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <com.shuanglu.edge.View.Banner.TextBanner.View.TextBannerView
            android:id="@+id/tbv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/edgeToolBarView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            ></com.shuanglu.edge.View.Banner.TextBanner.View.TextBannerView>

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp"
            android:onClick="click"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            />

</android.support.constraint.ConstraintLayout>